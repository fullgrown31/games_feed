<h2><%= @genre.name %> Games</h2>

<table>
    <tr>
        <th>Game</th>
        <th>Platform</th>
    </tr>
    <% @games.each do |game| %>
        <tr>
            <td><%= link_to game.name, game %></td>
            <td><%= link_to game.platform.name, game.platform %></td>
        </tr>
    <% end %>
</table>

<%= will_paginate @games %>

<p><%= link_to 'Back', genres_path %></p>